<style>
  .navhd {
    position: fixed;
    z-index: 5;
    width: 100%;
    top: 0;
    left: 0;
    background-color: white;
  }
  .navbar{
    padding: 0;
  }
  @media(max-width:580px){
    .navhd{
      position: relative;
    }
  }
</style>


<header style="" class="section-header navhd">
  <nav class="navbar navbar-top navbar-expand-lg navbar-dark bg-secondary">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample07"
        aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExample07">
        <ul class="navbar-nav mr-auto">
          <li><a href="#" class="nav-link"> <i class="fab fa-facebook"></i> </a></li>
          <li><a href="#" class="nav-link"> <i class="fab fa-instagram"></i> </a></li>
          <li><a href="#" class="nav-link"> <i class="fab fa-twitter"></i> </a></li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"> English </a>

          </li>
        </ul>
      </div>
    </div>
  </nav>



  <section class="header-main shadow-sm">
    <div class="container">
      <div class="row align-items-center">
        <!-- Add a column for the filter button -->
        

        <div class="col-lg-2 col-sm-3">
          <div class="brand-wrap">
            <img class="logo" src="">
            <h2 class="logo-text">
              <strong>
              <a style="color: rgb(206, 50, 50);" href="/">Z4 Mobiles</a>
              </strong>
            </h2>
          </div> <!-- brand-wrap.// -->
        </div>

        <div class="col-lg-1 col-sm-1">
          {{#if filter}}
          <button class="btn btn-filter" type="button" data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">
           <strong>Filter</strong> 
          </button>
          {{/if}}
        </div>



        <div class="col-lg-4 col-xl-5 col-sm-8">
          <form action="/serch-product" method="post" class="search-wrap">
            <div class="input-group w-100">
              <input type="text" name="query" class="form-control" style="width:55%;" placeholder="Search">
              <div class="input-group-append">
                <button class="btn btn-dark" type="submit">
                  <i class="fa fa-search"></i>
                </button>
              </div>
            </div>
          </form> <!-- search-wrap .end// -->
        </div>
        <!-- col.// -->

        <div class="col-lg-5 col-xl-4 col-sm-12">
          <div class="widgets-wrap float-right">
            <a href="/shop" class="widget-header mr-3">
              <div class="icontext">
                <div class="">
                  <h6>Shop</h6>
                </div>
                <div class="text-wrap">
                  <small class="small badge badge-warning"></small>
                </div>
              </div>
            </a>
            <a href="#" class="widget-header mr-3">
              <div onclick="viewCart()" class="icontext">
                <div class="icon-wrap">
                  <i id="cart"  class="fa-solid fa-cart-shopping"></i>
                  <span id="cartcount" class=" absolute top-0 left-20 small badge badge-warning">{{cartcount}}</span>
                </div>
              </div>
            </a>

            <a href="/view-wishlist" class="widget-header mr-3">
              <div class="icontext">
                <div class="icon-wrap"><i class="fa-solid fa-heart"></i>
                <span id="wishcount" class=" absolute top-0 left-20 small badge badge-warning">{{ wishListCount}}</span>
                </div>
                <div class="text-wrap">                 
                   
                </div>
              </div>
            </a>

           

            {{#if name}}
            <div class="widget-header dropdown">
              <a href="#" data-toggle="dropdown" data-offset="20,10">
                <div class="icontext">
                  <div class="icon-wrap"><i class="fa-solid fa-user"></i></div>
                  {{name}}
                  <div class="text-wrap">
                    <div><i class="fa fa-caret-down"></i> </div>
                  </div>
                </div>
              </a>
              <div class="dropdown-menu dropdown-menu-right">
                <article class="card-body">
                  <a href="/myorders" class="btn btn-block btn-primary">
                    <i class="fa fa-user"></i> &nbsp;My Profile
                  </a>

                  <a href="/logout" class="btn btn-block btn-danger">
                    <i class="fa fa-users"></i> &nbsp; Logout
                  </a>
                </article>
              </div>
            </div>

            {{else}}
            <a href="/login" class="widget-header mr-3">
              <div class="icontext">
                <div class="icon-wrap"><i class="fa-solid fa-user"></i></div>

                <div class="text-wrap">Sign in
                  <small class="small badge badge-warning"></small>
                </div>
              </div>
            </a>

            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </section>
</header>



<script src="/user/script/bootstrap.bundle.min.js"></script>
<script src="/user/script/jquery-2.0.0.min.js"></script>
<script src="/user/script/script.js"></script>
<!-- Content -->
<div id="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-6">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title">Edit Product</h5>
          </div>
          <div class="card-body" style="height: 100%;">
            <form action="/admin/edisubmittproduct?id={{product._id}}" id="editProdForm" method="post" enctype="multipart/form-data">
              <!-- Product Name -->
              <div class="form-group">
                <label for="productName">Product Name</label>
                <input type="text" class="form-control" value="{{product.Name}}" name="Name" id="productName"
                  placeholder="Enter product name" required>
                  <p style="color: red;" id="editProdNameErr"></p>

              </div>

              <!-- Product Description -->

              <div class="form-group">
                <label for="productDescription">Product Description</label>
                <textarea class="form-control" name="Description" id="productDescription" rows="4" placeholder="Enter product description"required>{{product.Description}}</textarea>
                     <p style="color: red;" id="editProdDisErr"></p>
              </div>
              
              

              <!-- Product Price -->
              <div class="form-group">
                <label for="productPrice">Product Price</label>
                <input type="number" name="Price" value="{{product.Price}}" class="form-control" id="productPrice"
                  placeholder="Enter product price" required>
                  <p style="color: red;" id="editProPriceErr"></p>
              </div>

              <!-- Product Discount -->
              <div class="form-group">
                <label for="productPrice">Discount Price</label>
                <input type="number" name="DiscountPrice" value="{{product.DiscountPrice}}" class="form-control"
                  id="productDisPrice" placeholder="Enter product price" required>
                  <p style="color: red;" id="editPodDisPriceErr"></p>
              </div>

              {{!-- {{#each data}}
              <div class="image-container ">
                <img class="imagePreview" src="{{this}}" alt="Preview Image" style="max-width: 200px; display: block;">
                <a class="removeImageButton" href="/removeImage?img={{this}}" type="button"
                  style="display: block;">Remove Image</a>
              </div>
              {{/each}} --}}

              {{!ORIGINAL}}

              
              <div class="form-group">
                <label for="productImages">Upload Product Image</label>
                <input type="file" class="form-control-file"  name="Image1" id="productImages0" accept="image/*"
                  onchange="viewIMG(event,'{{product.Images.[0]}}','{{product._id}}','one')"  >
                <div id="imagePreview" class="image-preview-container">

                  <img id="edtImgone" src="/uploads/cropped/{{product.Images.[0]}}" alt="" style="width: 140px; height: 200px;">

                </div>

              </div>
              
               <div class="form-group">
                <label for="productImages">Upload Product Image</label>
                <input type="file" class="form-control-file"  name="Image2" id="productImages1" accept="image/*"
                  onchange="viewIMG(event,'{{product.Images.[1]}}','{{product._id}}','two')">
                <div id="imagePreview" class="image-preview-container">

                  <img id="edtImgtwo" src="/uploads/cropped/{{product.Images.[1]}}" alt="" style="width: 140px; height: 200px;">

                </div>

              </div>
               <div class="form-group">
                <label for="productImages">Upload Product Image</label>
                <input type="file" class="form-control-file"  name="Image3" id="productImages2" accept="image/*"
                  onchange="viewIMG(event,'{{product.Images.[2]}}','{{product._id}}','three')">
                <div id="imagePreview" class="image-preview-container">

                  <img id="edtImgthree" src="/uploads/cropped/{{product.Images.[2]}}" alt="" style="width: 140px; height: 200px;">

                </div>

              </div>

             


          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="card">
          <div class="card-body" style="height: 100%;">

            <!-- Product Category -->
            <div class="form-group">
              <label for="productCategory">Product Category</label>

              <select name="Category" class="form-control" id="productCategory" required>
                <option value="{{CategoryName._id}}">{{CategoryName.Name}}</option>
                {{#each categories}}
                <option value="{{this._id}}">{{this.Name}}</option>
                {{/each}}
                <!-- Add more categories as needed -->
              </select>
              <p style="color: red;" id="editProdCatErr"></p>


            </div>

            <!-- Product Color -->
            <div class="form-group">
              <label for="productColor">Product Color</label>
              <input type="text" class="form-control" value="{{product.Color}}" name="Color" id="productColor"
                placeholder="Enter product color">
                 <p style="color: red;" id="editProdColErr"></p>
            </div>

            <div class="form-group">
              <label for="Quantiry">Quantity</label>
              <input type="number" value="{{product.Stock}}" class="form-control" name="Stock" id="Quantity"
                placeholder="Enter product Quantity">
                <p style="color: red;" id="editProQtyErr"></p>
            </div>

            <!-- Product Brand -->
            <div class="form-group">
              <label for="productBrand">Product Brand</label>

              <select name="Brand"  class="form-control" id="productBrand" required>
                   <option value="{{BrandName._id}}">{{BrandName.Name}}</option>
                {{#each brands}}
                <option value="{{this._id}}">{{this.Name}}</option>
                {{/each}}
                <!-- Add more brands as needed -->
              </select>
               <p style="color: red;" id="editProdBrandErr"></p>

            </div>

            <!-- Product RAM -->
            <div class="form-group">
              <label for="productRAM">Product RAM</label>
              <select name="RAM" class="form-control" id="productRAM" required>
                <option value="{{product.RAM}}">{{product.RAM}}</option>
                <option value="2GB">2GB</option>
                <option value="4GB">4GB</option>
                <option value="8GB">8GB</option>
                <option value="16GB">16GB</option>
                <option value="32GB">32GB</option>
                <!-- Add more RAM options as needed -->
              </select>
               <p style="color: red;" id="editRamErr"></p>
            </div>

            <!-- Product Internal Storage -->
            <div class="form-group">
              <label for="productStorage">Internal Storage</label>
              <select name="InternalStorage" class="form-control" id="productStorage" required>
               <option value="{{product.InternalStorage}}">{{product.InternalStorage}}</option>
                <option value="32GB">32GB</option>
                <option value="64GB">64GB</option>
                <option value="128GB">128GB</option>
                <!-- Add more storage options as needed -->
              </select>
               <p style="color: red;" id="editStorageErr"></p>
            </div>

            <!-- Product Status -->
            <div class="form-group">
              <label for="productStatus">Product Status</label>
              <select name="IsActive" class="form-control" id="productStatus" required>
               <option value="{{product.IsActive}}">{{product.IsActive}}</option>
                <option value="true">Active</option>
                <option value="false">Disabled</option>
                <!-- Add more status options as needed -->
              </select>
               <p style="color: red;" id="editProdStatusErr"></p>
            </div>

            <!-- Submit Button -->


            <!-- Cancel Button -->
            <button type="button" class="btn btn-secondary" onclick="cancelForm()">Cancel</button>

            <button type="button" onclick="validateEditProductForm()" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Content -->


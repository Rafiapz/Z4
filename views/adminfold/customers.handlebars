<div class="form-group mt-3">
  <form class="form-inline" action="/admin/searchCustomer" method="post">
    <input type="text" name="query" class="form-control mr-2" placeholder="Search...">
    <button type="submit" class="btn btn-primary">Search</button>
  </form>
</div>

<!-- Simple Tables -->
<div class="card">
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0 font-weight-bold text-primary">Simple Tables</h6>
  </div>
  <div class="table-responsive">
    <table class="table align-items-center table-flush">
      <thead class="thead-light">
        <tr>
          <th>Customer Name</th>
          <th>Email_Id</th>
          {{!-- <th>Orders</th> --}}
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody id="tableBlck">
        {{#each userDetails}}
        <tr>
          <td><a href="#">{{this.Full_Name}}</a></td>
          <td>{{this.Email_Id}}</td>
          {{!-- <td>{{this.OrdersCount}}</td> --}}

          {{#if this.isActive}}

          <td><span class="badge badge-success">


              Active

            </span></td>

          {{else}}

          <td><span class="badge badge-danger">


              Blocked

            </span></td>



          {{/if}}

          <td>
            <a href="/admin/block?id={{this._id}}&status=disable" class="btn btn-sm btn-danger">Disable</a>
            <a href="/admin/block?id={{this._id}}&status=enable" class="btn btn-sm btn-success">Enable</a>

          </td>




        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="card-footer">

  </div>
</div>
<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-end">
    {{#if prev}}
    <li class="page-item"><a class="page-link" href="/admin/customers?page={{prev}}">Previous</a></li>
    {{/if}}

    <li class="page-item"><a class="page-link" href="/admin/customers?page={{pageNum}}">{{pageNum}}</a></li>

    {{#if next}}
    <li class="page-item"><a class="page-link" href="/admin/customers?page={{next}}">Next</a></li>
    {{/if}}
  </ul>
</nav>
</div>

</div>
<!--Row-->



<!-- Modal Logout -->

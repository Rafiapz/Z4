<div class="row">
    <div class="col-lg-12 mb-4">
        <!-- Simple Tables -->
        <div class="card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Latest Transactions</h6>
                <div class="dropdown">

                </div>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th>Order ID</th>
                            <th>Transaction Date</th>
                            <th>Customer</th>
                            <th>Payment Method</th>
                            <th>Status</th>
                            <th>Amount</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each transactions}}
                        <tr>
                            <td><a href="#">ORD{{this.Order_id}}</a></td>
                            <td>{{this.Date}}</td>
                            <td>{{this.User_id.Full_Name}}</td>
                            <td>{{this.Method}}</td>
                            <td><span class="badge badge-{{this.Color}}">{{this.Status}}</span></td>
                            <td>{{this.Amount}}</td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-info dropdown-toggle" type="button"
                                        id="refundDropdown" data-toggle="dropdown" aria-haspopup="true"
                                        aria-expanded="false">
                                        Refund
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="refundDropdown">
                                        <button onclick="actionRefund('{{this._id}}','approve')" class="dropdown-item" >Approve</button>
                                        <button onclick="actionrefund('{{this._id}}','reject')" class="dropdown-item" >Reject</btton>
                                    </div>
                                </div>
                            </td>

                        </tr>
                        {{/each}}
                    </tbody>
                </table>

            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>


<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">
      {{#if prev}}
      <li class="page-item"><a class="page-link" href="/admin/transactions?page={{prev}}">Previous</a></li>
      {{/if}}

      <li class="page-item"><a class="page-link" href="/admin/transactions?page={{pageNum}}">{{pageNum}}</a></li>

      {{#if next}}
      <li class="page-item"><a class="page-link" href="/admin/transactions?page={{next}}">Next</a></li>
      {{/if}}
    </ul>
  </nav>



  <!-- Modal Logout -->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelLogout"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabelLogout">Ohh No!</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to logout?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
          <a href="/admin/logout" class="btn btn-primary">Logout</a>
        </div>
      </div>
    </div>
  </div>

